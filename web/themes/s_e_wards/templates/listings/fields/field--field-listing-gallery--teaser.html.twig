<div class="gallery-popup--listing">
{% set i = 0 %}
  {%- for item in items -%}
    {% set i = i + 1 %}
    {% if i == 1 %}
      <a href="{{file_url(item.content['#item'].entity.uri.value)}}" class="image-popup" title="{{ item.content['#item'].title }}">
        <i class="icon la la-video-camera"></i>{{'Gallery'|t}}
      </a>
    {% else %}
      <a href="{{file_url(item.content['#item'].entity.uri.value)}}" class="image-popup" title="{{ item.content['#item'].title }}"></a>
    {% endif %}
  {%- endfor -%}
</div>